        class="container text-center mt-4 p-3"
        style="background-color: #01337e"
      >
        <h2 class="text-light" style="letter-spacing: 4px; color: lightgray">
          HILL AFB FAMCAMP
        </h2>
      </div>
      <div class="container bg-light text-center">
        <div class="row" style="display: flex; flex-wrap: wrap">
          <div class="col-6 d-none d-lg-block text-center bg-danger h-100">
            <img
              src="images/rvpark-people2.jpg"
              width="104%"
              height="135%"
              alt="RV Park"
              style="margin-left: -0.75rem"
            />
          </div>
          <div class="col-sm-12 col-lg-6 text-center p-0 m-0">
            <div class="row d-flex justify-content-between p-0 m-0">
              <div class="btn-group w-100 p-0 m-0" role="group">
                <button
                  class="btn btn-primary btn-lg flex-fill ps-0 pe-0 ms-0 me-0"
                  style="
                    border-radius: 0;
                    border-right: 1px solid black;
                    margin-right: 1px;
                  "
                  onclick="window.location.href='/register'"
                >
                  Register
                </button>
                <button
                  class="btn btn-primary btn-lg flex-fill ps-0 pe-0 ms-0 me-0"
                  style="border-radius: 0"
                  onclick="window.location.href='/login'"
                >
                  Sign In
                </button>
              </div>
            </div>
            <div class="row">
              <form
                id="registerPage"
                onSubmit="return register(event);"
                method="post"
                style="display: block"
              >
                <div class="ps-4 pe-4 pt-4 pb-0">
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-envelope-at-fill text-white"></i>
                    </span>
                    <input
                      id="email"
                      name="email"
                      type="email"
                      class="form-control"
                      autofocus="autofocus"
                      placeholder="Email"
                    />
                  </div>
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-person-plus-fill text-white"></i>
                    </span>
                    <input
                      id="firstname"
                      name="firstname"
                      type="text"
                      class="form-control"
                      placeholder="First Name"
                    />
                  </div>
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-person-plus-fill text-white"></i>
                    </span>
                    <input
                      id="lastname"
                      name="lastname"
                      type="text"
                      class="form-control"
                      placeholder="Last Name"
                    />
                  </div>
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-telephone-fill text-white"></i>
                    </span>
                    <input
                      id="phone"
                      name="phone"
                      type="tel"
                      class="form-control"
                      placeholder="Phone Number"
                    />
                  </div>
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-person-vcard-fill text-white"></i>
                    </span>
                    <select
                      id="serviceBranch"
                      name="serviceBranch"
                      class="input-group form-control"
                    >
                      <option value="" hidden>
                        Which branch are you affiliated with?
                      </option>
                      <option value="Air Force">Air Force</option>
                      <option value="Army">Army</option>
                      <option value="Coast Guard">Coast Guard</option>
                      <option value="Marines">Marines</option>
                      <option value="Navy">Navy</option>
                      <option value="DOD Authorized Civilian">
                        DOD Authorized Civilian
                      </option>
                    </select>
                  </div>
                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-person-badge-fill text-white"></i>
                    </span>
                    <select
                      id="serviceStatus"
                      name="serviceStatus"
                      class="input-group form-control"
                    >
                      <option value="" hidden>
                        What is your current service status?
                      </option>
                      <option value="Active">Active Duty</option>
                      <option value="Retired">Retired</option>
                    </select>
                  </div>

                  <div class="input-group mb-2">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-key-fill text-white"></i>
                    </span>
                    <input
                      id="password"
                      name="password"
                      type="password"
                      class="form-control"
                      placeholder="Password"
                    />
                  </div>
                  <div class="input-group">
                    <span class="input-group-text bg-primary">
                      <i class="bi bi-key-fill text-white"></i>
                    </span>
                    <input
                      id="confirm"
                      name="confirm"
                      type="password"
                      class="form-control"
                      placeholder="Confirm Password"
                    />
                  </div>
                  <!-- REMOVED THE STYLING FOR validID to test -->
                  <div
                    id="validID"
                    class="input-group mt-2 ms-2"
                    style="display: block"
                  >
                    <input type="checkbox" id="checkbox" name="checkbox" />
                    <label for="checkbox" class="ms-3">
                      I acknowledge I must have a valid ID card to enter Hill
                      AFB to use the FamCamp</label
                    >
                  </div>
                  <div>
                    <p id="message" class="text-danger" style="height: 15px">
                      <%- locals.message %>
                    </p>
                  </div>
                  <input type="hidden" id="hash" name="hash" />
                  <input type="hidden" id="salt" name="salt" />
                  <input type="hidden" id="type" name="type" />
                  <div class="text-center m-0 p-0">
                    <button class="btn btn-primary" type="submit">
                      Register
