    <script type="text/javascript" src="crypto-js.js"></script>
    <script>
      $(document).ready(function () {
        $(".dropdown-toggle").dropdown();
      });
    </script>

    <script>
      function register(event) {
        // Need to check if Acknowledgment checkbox is checked before allowing form submission
        const password1 = document.getElementById("password").value;
        const password2 = document.getElementById("confirm").value;
        let passwordValid = false;
        let message = "";
        if (document.getElementById("checkbox").checked) {
          // Other form validation code here
          if (document.getElementById("email").value == "") {
            message = "Please enter an email address";
          } else if (document.getElementById("firstname").value == "") {
            message = "Please enter your first name";
          } else if (document.getElementById("lastname").value == "") {
            message = "Please enter your last name";
          } else if (document.getElementById("phone").value == "") {
            message = "Please enter your phone number";
          } else if (document.getElementById("serviceBranch").value == "") {
            message = "Please select a service branch";
          } else if (document.getElementById("serviceStatus").value == "") {
            message = "Please select a service status";
          } else if (password1 == "") {
            message = "Please enter password";
          } else if (password2 == "") {
            message = "Please re-enter password";
          } else if (password1 != password2) {
            message = "Passwords didn't match";
          } else {
            passwordValid = true;
          }
          if (!passwordValid) {
            document.getElementById("message").innerHTML = message;
            event.preventDefault();
          } else {
            let salt = CryptoJS.lib.WordArray.random(8);
            document.getElementById("salt").value = salt;
            let hashed = CryptoJS.SHA256(password1 + ":" + salt).toString(
              CryptoJS.enc.Hex
            );
            document.getElementById("hash").value = hashed;
            document.getElementById("type").value = "registration";
          }
        } else {
          message = "Please confirm you have base access";
          document.getElementById("message").innerHTML = message;
          event.preventDefault();
        }
      }
      function showMap() {
        const mapContainer = document.getElementById("registerMap");
        const body = document.getElementById("registerContent");
        mapContainer.style.display =
          mapContainer.style.display === "none" ? "block" : "none";
        body.style.display = body.style.display === "block" ? "none" : "block";
      }
    </script>
