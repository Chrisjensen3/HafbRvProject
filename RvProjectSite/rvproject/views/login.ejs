    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/@popperjs/core/dist/umd/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="crypto-js.js"></script>
    <script>
      $(document).ready(function () {
        $(".dropdown-toggle").dropdown();
      });
    </script>
    <script>
      let emailBlurred = false;
      let registerClicked = false;
      let formSubmitted = false;

      function handleEmailBlur(event) {
        console.log(event);
        if (event.relatedTarget && event.relatedTarget.tagName === "BUTTON") {
          // Get the id of the button that was clicked
          const buttonId = event.relatedTarget.id;
          console.log(buttonId);
          if (buttonId == "registerButton") {
            // Navigate to the registration page
            window.location.replace("/register");
          } else if (buttonId == "loginButton") {
            window.location.replace("/login");
          }
        } else {
          // Clear error message when they try to enter user email again
          document.getElementById("message").innerHTML = "";
          emailBlurred = true;
          getSalt(event);
        }
      }

      async function getSalt(event) {
        const email = document.getElementById("email").value;
        if (email === "") {
          document.getElementById("message").innerHTML =
            "Please enter an email";
          return;
        }
        try {
          const response = await fetch("/getsalt", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email: email }),
          });

          if (response.ok) {
            const data = await response.json();
            const salt = data.salt;
            document.getElementById("salt").value = salt;
          } else {
            document.getElementById("message").innerHTML =
              "Invalid User email, please try again";
          }
        } catch (error) {
          document.getElementById("message").innerHTML = "Network error";
        }
      }

      function login(event) {
        // Prevent form submission until the password hash is generated
        event.preventDefault();
        formSubmitted = true;

        let email = document.getElementById("email").value;
        if (email == "") {
          document.getElementById("message").innerHTML =
            "Please enter an email";
          event.preventDefault();
        }
        let password = document.getElementById("password").value;
        let salt = document.getElementById("salt").value;
        if (password == "") {
          document.getElementById("message").innerHTML =
            "Please enter a password";
          event.preventDefault();
        } else {
          // Put the hashed password in the DOM so it can be posted
          var hashedPassword = CryptoJS.SHA256(password + ":" + salt).toString(
            CryptoJS.enc.Hex
          );
          document.getElementById("hashedPassword").value = hashedPassword;

          // Now submit the form
          document.getElementById("loginPage").submit();
        }
      }

      function showMap() {
        const mapContainer = document.getElementById("registerMap");
        const body = document.getElementById("loginContent");
        mapContainer.style.display =
          mapContainer.style.display === "none" ? "block" : "none";
        body.style.display = body.style.display === "block" ? "none" : "block";
      }
    </script>
