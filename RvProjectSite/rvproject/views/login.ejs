                      <i class="bi bi-key-fill text-white"></i>
                    </span>
                    <input
                      id="password"
                      name="password"
                      type="password"
                      class="form-control"
                      autofocus="false"
                      placeholder="Password"
                    />
                  </div>
                  <input
                    type="hidden"
                    id="salt"
                    name="salt"
                    value="<%- locals.salt %>"
                  />
                  <input
                    type="hidden"
                    id="hashedPassword"
                    name="hashedPassword"
                    value=""
                  />
                  <div>
